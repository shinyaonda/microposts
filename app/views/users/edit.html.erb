<h1>change your profile</h1>

<div class="row">
  <div class="col-md-6 col-md^offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :gender %>
      <div>
      <label class="radio-inline"><%= f.radio_button :gender, 0 %>man</label>
      <label class="radio-inline"><%= f.radio_button :gender, 1 %>woman</label>
      </div>
      <br>
      
      <%= f.label :country %>
      <%= f.text_field :country, class: 'form-control' %>
      
      <%= f.label :coments %>
      <%= f.text_field :coments, class: 'form-control' %>
      
      <%= f.submit "save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>  